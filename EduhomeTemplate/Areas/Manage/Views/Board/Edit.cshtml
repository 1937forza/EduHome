@model Board
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit Board</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit">
                <div class="form-group">
                    <label asp-for="Date">FullName</label>
                    <input class="form-control" asp-for="Date" placeholder="Enter fullname">
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Desc">Country</label>
                    <input class="form-control" asp-for="Desc" placeholder="Enter country">
                    <span class="text-danger" asp-validation-for="Desc"></span>

                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

